<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogSitesi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogSitesi.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BlogSitesi</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Anasayfa</a>
                        </li>
                        @await Component.InvokeAsync("Kategoriler", new { secili = "3" })
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Posts" asp-action="Index">Tüm İçerikler</a>
                        </li>
                    </ul>
                </div>
                <form asp-controller="Posts" asp-action="Index" method="get" class="col-12 col-lg-auto mb-3 mb-lg-0 me-3" role="search">
                    <input name="q" type="search" class="form-control" placeholder="İçerik Ara..." aria-label="Search">
                </form>
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="btn btn-primary me-2" asp-controller="Account" asp-action="Index">Üye Bilgilerim</a>
                    <a class="btn btn-danger" asp-controller="Account" asp-action="Logout">Oturumu Kapat</a>
                }
                else
                {
                    <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                    <a class="btn btn-warning ms-2" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        @Html.Raw(TempData["Message"])
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BlogSitesi - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
